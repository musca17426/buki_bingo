{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",           // ✅ CommonJSやESMではなくグローバルスクリプト形式に
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src"]
}
